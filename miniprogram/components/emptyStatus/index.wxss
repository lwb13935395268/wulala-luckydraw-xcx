/* components/loading/index.wxss */
.body{
    height: 100vh;
    position: fixed;
    z-index: 200;
    width: 100vw;
    overflow: hidden;
}
.body .empty{
    width: 400rpx;
    height: 400rpx;
}
.body .error{
    width: 480rpx;
    height: 400rpx;
}
.content{
    width: 400rpx;
    height: 400rpx;
    margin: 0 auto;
    position: absolute; 
    left: 50%; 
    top:30%; 
    transform: translate(-50%,-30%);
}
.content .text{
    color: rgb(231, 116, 93);
    font-weight: 550;
    text-align: center;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
}

.empty-content{
    width: 480rpx;
    height: 400rpx;
    margin: 0 auto;
    position: absolute; 
    left: 50%; 
    top:30%; 
    transform: translate(-50%,-30%);
}
.empty-content .empty-text{
    color: rgb(140, 169, 255);
    font-weight: 550;
    text-align: center;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
}