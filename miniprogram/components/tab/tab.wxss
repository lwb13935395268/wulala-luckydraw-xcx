/* components/tab/tab.wxss */
.tab{
}

.fontColorBox,
.fontColorBox1 {
    /* 文字默认颜色 */
    color: black;
}
.navBox {
    /* 顶部tab盒子样式 */
    width: 100%;
    height: 108rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.titleBox {
    /* 未选中文字的样式 */
    color: rgb(168, 170, 175);
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.lineBox,.notLineBox{
    /* 选中及未选中底线共同样式 */
    width: 32rpx;
    height: 8rpx;
}

.lineBox {
    /* 选中底线样式 */
    background: rgb(43, 44, 45);
    margin-top: 16rpx;
    border-radius: 4rpx;
}

.notLineBox {
    /* 未选中底线样式 */
    background: transparent;
}
.swiperBox {
    /* 底部内容样式 */
    width: 100vw;
    box-sizing: border-box;
    /* margin: 12rpx 0rpx; */
    font-size: 28rpx;
    position: relative;
}
.swiperTtemBox{
    box-sizing: border-box;
}
.scroll{
    height: calc(100vh - 108rpx);

}