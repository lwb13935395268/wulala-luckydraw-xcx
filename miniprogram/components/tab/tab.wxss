/* components/tab/tab.wxss */
.fontColorBox,
.fontColorBox1 {
    /* 文字默认颜色 */
    color: #c35b52;
    font-weight: bold;
}
.navBox {
    /* 顶部tab盒子样式 */
    position: sticky;
    top: 0;
    width: 100%;
    height: 108rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.titleBox {
    /* 未选中文字的样式 */
    color: rgb(168, 170, 175);
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    height: 100%;
}
.lineBox,.notLineBox{
    /* 选中及未选中底线共同样式 */
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 10rpx;
}

.lineBox {
    /* 选中底线样式 */
    background: #df463e;
    border-radius : 10rpx;
    margin-bottom: 14rpx;
}

.notLineBox {
    /* 未选中底线样式 */
    background: transparent;
}
.swiperBox {
    /* 底部内容样式 */
    width: 100%;
    box-sizing: border-box;
    /* background-color: gray; */
    /* margin: 12rpx 0rpx; */
    font-size: 28rpx;
    position: relative;
    background-color: #f2f2f2;
}
.swiperTtemBox{
    box-sizing: border-box;
}
.scroll{
    height: calc(100vh - 108rpx);
}
.bomTxt {
    width: 100%;
    display: flex;
    justify-content: center;
    font-size: 12px;
    color: rgb(126, 138, 155);
    padding: 0rpx 0rpx 20rpx 0rpx;
}
.bottom-tip{
    padding-bottom:10rpx ;
}