/* components/loading/index.wxss */
.main{
    background-color: #fff;
    height: 100vh;
    position: fixed;
    z-index: 200;
    width: 100vw;
    overflow: hidden;
}
.main image{
    width: 400rpx;
    height: 400rpx;
}
.content{
    width: 400rpx;
    height: 400rpx;
    margin: 30rpx auto;
    position: relative;
}
.content .text{
    color: rgb(231, 116, 93);
    font-weight: 550;
    text-align: center;
    position: absolute;
    bottom: 10rpx;
    left: 50%;
    transform: translate(-50%);
}