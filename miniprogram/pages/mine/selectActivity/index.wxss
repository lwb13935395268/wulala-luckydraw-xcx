/* pages/mine/selectActivity/index.wxss */
.main{
    background-color: #f5f5f5;
    height: 100vh;
}
.integralo{
    background-color: #fff;
    border-radius: 15rpx;
    padding: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.img{
    display: flex;
    align-items: center;
    justify-content: space-between
}
.icon-introduce{
    width: 80rpx;
    height: 80rpx;
}
.icon-entry{
    width: 30rpx;
    height: 30rpx;
}
.content{
    line-height: 40rpx;
}
.content .content-title{
    font-size: 30rpx;
}
.content .introduce{
    color: #aaa;
    font-size: 20rpx;
}
.tips{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.tips image{
    width: 100rpx;
    height: 85rpx;
}
.tips .participate-in{
    width: 100rpx;
    height: 70rpx;
}
.tips .partake-luck_draw{
    background-color: #fff;
    width: 340rpx;
    height: 200rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.tips .text{
    font-size: 30rpx;
    padding-top: 20rpx;
}