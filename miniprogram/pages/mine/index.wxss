/* pages/mine/index.wxss */
.mine{
    min-height: 100vh;
    background-color: #f6f6f600;
}
.nav{
    display: flex;
    justify-content:flex-end;
    padding: 15rpx 0;
}
.top{
    background: linear-gradient(to bottom, #f8e8c4, #f6f6f6) ;
}
.nav image{
    width: 48rpx;
    height: 48rpx;
}
.header{
    padding: 20rpx 0;
}
.header image{
    width: 140rpx;
    height: 140rpx;
}
.goods{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20rpx;
    /* justify-content: spac; */
}
.goods .item{
    /* background-color: #f9d689; */
    padding: 20rpx 26rpx;
    border-radius: 10rpx;
}
.list .item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 10rpx;
    font-weight: bold;
    font-size: 28rpx;
}
.list .item image{
    width: 40rpx;
    height: 40rpx;
}
.list .item .entry{
    width: 30rpx;
    height: 30rpx;
}
.fc-gray{
    color: #393742;
    font-weight: bold;
}
.back-yellow{
    /* background-color: #fda725; */
    background: linear-gradient(to right, #fc8f20, #f9b22d) ;
}
.back-orange{
    /* background-color: #ff6050; */
    background: linear-gradient(to right, #ff6050, #fc7050) ;
}
