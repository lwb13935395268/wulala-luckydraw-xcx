/* pages/mine/feedback/index.wxss */
.main{
    background-color: #f5f5f5;
    height: calc(100vh - 120rpx);
    overflow: scroll;
}
.tips{
    background-color: #fdf7e7;
    padding: 40rpx;
    border-radius: 15rpx;
    border: 1rpx solid #ebe7dc;
    color: rgb(109, 108, 108);
    font-size: 30rpx;
    line-height: 50rpx;
}
.proposal{
    background-color: white;
    border-radius: 15rpx;
    padding: 40rpx;
}
.textarea{
    height: 180rpx;
}
.camera{
    background-color: #eee;
    width: 250rpx;
    height: 250rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 15rpx;
    flex-direction: column;
    font-size: 30rpx;
}
.camera image{
    width: 70rpx;
    height: 70rpx;
    filter: invert(100%)
}
.type .text{
    color: #aaa;
    padding: 30rpx 0;
}
.type checkbox-group{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 15rpx;
}
.type label{
    background-color: #fff;
    padding: 30rpx 10rpx;
    font-size: 25rpx;
    text-align: center;
    border-radius: 10rpx;
    width: 205rpx;
}
.contact{
    background-color: #fff;
    border-radius: 15rpx;
    padding: 30rpx;
    display: flex;
    gap: 20rpx;
}
.submit-btn{
    background-color: #fff;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    width: 100vw;
    z-index: 2000;
}
.submit-btn button{
    background-color: #dc3a38;
    color: white;
}
.feedback-img{
    position: relative;
}
.feedback-img image{
    width: 620rpx;
}
.close .error{
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: -25rpx;
    right: -25rpx;
}