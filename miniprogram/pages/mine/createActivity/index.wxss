/* pages/mine/createActivity/index.wxss */
.df{
    display: flex;
    align-items: center;
}
.center{
    display: table;
    margin: 0 auto;
}
.mt-50{
    display: table;
    margin-top: 50rpx;
}
.mb-50{
    display: table;
    margin-bottom: 50rpx;
}
.mt-30{
    margin-top: 30rpx;
}
.mb-30{
    margin-bottom: 30rpx;
}
.mt-15{
    margin-top: 15rpx;
}
.mb-20{
    margin-bottom: 30rpx;
}
.main{
    background-color: #f5f5f5;
    height: 100vh;
    overflow: scroll;
}
.title{
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
    color: white;
    font-size: 30rpx;
    padding: 20rpx 0;
    display: grid;
    grid-template-columns: 1fr 5fr 1fr;
    justify-items: center;
    align-items: center;
}
.title .left-arrow{
    width: 35rpx;
    height: 40rpx;
}
/* 活动设置 */
.activity-set{
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 2rpx -2rpx 13rpx 5rpx #ccc;
    overflow: hidden;
}
.upload-img{
    border: 1rpx dashed #ccc;
    width: 600rpx;
    height: 300rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    position: relative;
}

.prize-icon{
    display: block;
    width: 600rpx;
    height: 450rpx;
}
.upload-img .content .name{
    font-size: 25rpx;
    color: #aaa;
}
.content{
    background-color: #fff;
    padding: 10rpx 20rpx;
    border-radius: 8rpx;
    border: 1rpx solid #ccc;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
}
.upload-img .image-file{
    width: 100%;
    height: 100%;
}
.hr{
    width: 90%;
    height: 1rpx;
    background-color: #eee;
    margin: 0 auto;
    margin-top: 50rpx;
}
.textarea{
    border-bottom: 1rpx solid #eee;
    margin: 30rpx auto;
    width: 580rpx;
    height: 80rpx;
    font-size: 30rpx;
}
.activity-timer{
    width: 600rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 50rpx auto;
    font-size: 30rpx;
}
.start-time{
    border-bottom: 1rpx solid #ccc;
}
.prize{
    display: flex;
    align-items: center;
    width: 580rpx;
    margin: 30rpx auto;
}
.prize input{
    width: 250rpx;
    border-bottom: 1rpx solid #ccc;
    text-align: center;
}
.conditions-met{
    width: 250rpx;
    border-bottom: 1px solid #ccc;
    line-height: 10rpx;
}
.activity-details_btn{
    width: 240rpx !important;
    font-size: 25rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
}
.activity-details_btn image{
    width: 40rpx;
    height: 35rpx;
}
.activity-details{
    display: flex;
    margin: 30rpx 0;
}
.activity-rule{
    width: 580rpx;
    margin: 30rpx auto;
    border: 1rpx solid #eee;
    padding: 30rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: rgb(124, 123, 123);
}
.introduce{
    width: 580rpx;
    margin: 40rpx auto;
    font-size: 30rpx;
    line-height: 50rpx;
    color: rgb(124, 123, 123);
}
.addPrize{
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
}
.prize-info{
    position: relative;
}
.activity-delete image{
    width: 50rpx;
    height: 50rpx;
    position:absolute;
    right: 30rpx;
    top: -30rpx;
}
.rule{
    border-bottom: 1rpx solid #ccc;
    width: 100%;
    height: 100rpx;
    padding-top:50rpx ;
}
.prize view{
    border: 1rpx solid #ccc;
    width: 50rpx;
    height: 50rpx;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}