/* pages/mine/createActivity/index.wxss */
.mtb-20{
    margin:0 auto;
}
.mt-50{
    margin-top: 50rpx;
}
.mt-15{
    margin-top: 15rpx;
}
.mb-20{
    margin-bottom: 30rpx;
}
.main{
    background-color: #f5f5f5;
    height: 100vh;
    overflow: hidden;
}
.title{
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
    color: white;
    font-size: 30rpx;
    padding: 20rpx 0;
    display: grid;
    grid-template-columns: 1fr 5fr 1fr;
    justify-items: center;
    align-items: center;
}
.title .left-arrow{
    width: 35rpx;
    height: 40rpx;
}
/* 活动设置 */
.activity-set{
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 10rpx 10rpx  10rpx 10rpx #ccc;
    overflow: hidden;
}
.activity-set .activity-title{
    width: 450rpx;
    height: 80rpx;
    background-image: url("https://636c-cloud1-6g94u1qn210fa109-1316664325.tcb.qcloud.la/icon-activity_title.png?sign=3d6313138dd1cfca228b27ed5661c244&t=1675239753");
    background-repeat: no-repeat;
    background-size: 450rpx 80rpx;
    text-align: center;
    color: white;
    line-height: 80rpx;
    font-size: 28rpx;
    font-weight: 550;
    padding-bottom: -10rpx;
}
.activity-thememap{
    display: flex;
    align-items: center;
    gap: 20rpx;
}
.activity-thememap .bar{
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
    height: 50rpx;
    width: 10rpx;
}
.activity-thememap .spot{
    background-color: black;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
}
.activity-thememap .name{
    font-size: 30rpx;
}
.upload-img{
    border: 1rpx dashed #ccc;
    width: 600rpx;
    height: 450rpx;
    margin: 0 auto;
    margin-top: 30rpx;
}

.upload-img{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.upload-img .content .name{
    font-size: 25rpx;
    padding: 30rpx 60rpx;
    color: #ccc;
}
.upload-img .plus{
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto;
}
.hr{
    width: 90%;
    height: 1rpx;
    background-color: #eee;
    margin: 0 auto;
    margin-top: 50rpx;
}