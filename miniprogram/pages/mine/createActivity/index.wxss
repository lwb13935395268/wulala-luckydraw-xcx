/* pages/mine/createActivity/index.wxss */
.center{
    display: table;
    margin: 0 auto;
}
.mt-50{
    margin-top: 50rpx;
}
.mt-15{
    margin-top: 15rpx;
}
.mb-20{
    margin-bottom: 30rpx;
}
.main{
    background-color: #f5f5f5;
    height: 100vh;
    overflow: hidden;
}
.title{
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
    color: white;
    font-size: 30rpx;
    padding: 20rpx 0;
    display: grid;
    grid-template-columns: 1fr 5fr 1fr;
    justify-items: center;
    align-items: center;
}
.title .left-arrow{
    width: 35rpx;
    height: 40rpx;
}
/* 活动设置 */
.activity-set{
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 2rpx -2rpx 13rpx 5rpx #ccc;
    overflow: hidden;
}
.activity-thememap{
    display: flex;
    align-items: center;
    gap: 20rpx;
}
.activity-thememap .bar{
    background-image: linear-gradient(to right,#dc3a38,#ed573c,#fd7541);
    height: 50rpx;
    width: 10rpx;
}
.activity-thememap .spot{
    background-color: black;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
}
.activity-thememap .name{
    font-size: 30rpx;
}
.upload-img{
    border: 1rpx dashed #ccc;
    width: 600rpx;
    height: 450rpx;
    margin: 0 auto;
    margin-top: 30rpx;
}

.upload-img{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.upload-img .content .name{
    font-size: 25rpx;
    padding: 30rpx 60rpx;
    color: #ccc;
}
.upload-img .plus{
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto;
}
.hr{
    width: 90%;
    height: 1rpx;
    background-color: #eee;
    margin: 0 auto;
    margin-top: 50rpx;
}