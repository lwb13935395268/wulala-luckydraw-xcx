<view class="main">
    <tab titleList="{{['全部','推荐','进行中','已结束']}}" bind:myevent="onMyEvent" showLoading="{{isShow}}">
        <view slot="推荐" class="{{activityList != ''?'wrap':''}}">
            <view class="gap-tb-20" wx:if="{{activityList != ''}}">
                <activity  wx:for="{{activityList}}" wx:key="index" status="0" bindtap="toCommodityDetails" data-id="{{item._id}}" bind:loadImg="loadImg" data-id="{{item._id}}"  title="{{item.activityTitle}}" startDate="{{item.startDate}}" endDate="{{item.endDate}}" imageUrl="{{item.imgFileId}}"></activity>
            </view>
            <empty wx:else></empty>
        </view>
        <view slot="全部" class="{{activityList != '' ? 'wrap':''}}">
            <view class="gap-tb-20" wx:if="{{activityList!=''}}">
                <activity  wx:for="{{activityList}}" wx:key="index" status="0" bind:loadImg="loadImg" data-id="{{item._id}}" bindtap="toCommodityDetails" data-id="{{item._id}}" title="{{item.activityTitle}}" startDate="{{item.startDate}}" endDate="{{item.endDate}}" imageUrl="{{item.imgFileId}}"></activity>
            </view>
            <empty wx:else></empty>
        </view>
        <view slot="进行中" class="{{activityList != ''?'wrap':''}}">
            <view class="gap-tb-20" wx:if="{{activityList != ''}}">
                <activity  wx:for="{{activityList}}" wx:key="index" status="0" data-id="{{item._id}}" bind:loadImg="loadImg" bindtap="toCommodityDetails" data-id="{{item._id}}" title="{{item.activityTitle}}" startDate="{{item.startDate}}" endDate="{{item.endDate}}" imageUrl="{{item.imgFileId}}"></activity>
            </view>
            <empty wx:else></empty>
        </view>
        <view slot="已结束" class="{{activityList != ''?'wrap':''}}">
            <view class="gap-tb-20" wx:if="{{activityList != ''}}">
                <activity  wx:for="{{activityList}}" wx:key="index" status="2" data-id="{{item._id}}"  bind:loadImg="loadImg" bindtap="toCommodityDetails" data-id="{{item._id}}" title="{{item.activityTitle}}" startDate="{{item.startDate}}" endDate="{{item.endDate}}" imageUrl="{{item.imgFileId}}"></activity>
            </view>
            <empty wx:else></empty>
        </view>
    </tab>
</view>
