/* pages/activityDetail/index.wxss */
.wraps{
    width: 100vw;
    height: 100vh;
    background-image: url('https://636c-cloud1-6g94u1qn210fa109-1316664325.tcb.qcloud.la/detail.png?sign=8b9fbc25fe1148ac3f47cc43097ad4d1&t=1675338201');
    background-size: 100% 100%;
    background-repeat: no-repeat;
}
.header{
    height: 25vh;
    /* background-color: red; */
}
.convert image{
    width: 45rpx;
    height: 45rpx;
    margin: 20rpx;
}
.setting{
    float: right;
}
.setting-main{
    margin: 20rpx 0;
    font-size: 28rpx;
    color: #797979;
    text-align: center;
    display: flex;
    flex-direction: column;
}
.setting-main image{
    width: 35rpx;
    height: 35rpx;
    margin: 0 20rpx;
}
.title{
    height: 5vh;
    padding: 8rpx 0;
    font-size: 40rpx;
    font-weight: 700;
    color: #e00340;
    /* background-color: blue; */
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
    display: flex;
    align-items: center;
    justify-content: center;
}
.time{
    /* background-color: black; */
    height: 18vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #fff;
}
.times{
    display: flex;
    align-items: center;
    color: #fff;
}
.sum{
    background: #fff;
    width: 50rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fc2300;
    font-weight: 600;
    border-radius: 10rpx;
    margin:20rpx 10rpx;
}
.main{
    padding: 50rpx 0;
}
.shop{
    display: grid;
    grid-template-columns: .6fr 1fr;
    /* border: 5rpx solid #fbeff0; */
    width: 80%;
    margin: 0 auto;
}
.shopimage{
    margin: 0 20rpx;
}
.shopimage image{
    width: 200rpx;
    height: 200rpx;
}
.shopdetail{
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.shopdetail text{
    margin: 0 15rpx 0 0;
    color: red;
}
.schedule{
    width: 80%;
    margin: 0 auto;
}
.progress-box{
    padding: 30rpx 20rpx;
}
.prople{
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
}
.prople image{
    width: 90rpx;
    height: 90rpx;
}
.prople-title{
    display: flex;
    justify-content: space-around;
}
.red{
    color: #f05e71;
}
.black{
    color: #af7d84;
}
.prople-title text{
    font-size: 36rpx;
    font-weight: 600;
}
.prople-button{
    padding: 20rpx 0;
}
.button{
    background:repeating-linear-gradient(to right,#ff6eb9,#e17654);
    width: 80%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    color: #f7f1e3;
    font-size: 40rpx;
    font-weight: 600;
    border-radius: 65rpx;
    letter-spacing: 10rpx;
    padding: 15rpx 0;
}