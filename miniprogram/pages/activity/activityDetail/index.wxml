                    </view>
                </scroll-view>
            </view>
        </view>
    </view>
    <view class="header">
        <view class="convert">
            <image src="../../../images/iocn-convert.png" bindtap="nextHome"></image>
            <view class="setting">
                <view class="setting-main" bindtap="setModal">
                    <image src="../../../images/icon-rule.png"></image>
                    <text>规则</text>
                </view>
                <button class="style-clear" type="default" open-type="share">
                    <view class="setting-main">
                        <image src="../../../images/icon-share.png"></image>
                        <text>分享</text>
                    </view>
                </button>
            </view>
        </view>
    </view>
    <view class="title">
        <text>活动时间:{{startDate}}-{{endDate}}</text>
    </view>
    <view class="time">
        <text>距离结束</text>
        <view class="times">
            <view class="sum">2</view>天
            <view class="sum">16</view>时
            <view class="sum">23</view>分
            <view class="sum">23</view>秒
        </view>
    </view>

    <view class="main">
        <view class="main-shop">
            <view class="shop" wx:for="{{lists}}" wx:key="index">
                <view class="shopimage">
                    <image src="{{item.addImg}}"></image>
                </view>
                <view class="shopdetail">
                    <view>{{item.prizeName}}</view>
                    <view>
                        <text>数量:</text>
                        <text>{{item.prizeNum}}份</text>
                    </view>
                </view>
            </view>
        </view>
        <view class="schedule">
            <view class="box-progressBar">
                <!-- <view class="progressBar">
                </view> -->
                <view class="progress">
                    <progress percent="{{total}}" active stroke-width="9" border-radius="15" />
                </view>
                <view class="box-post{{index+1}}" wx:for="{{lists}}" wx:key="index">
                    <view class="box-img">
                        <image class="icon-jp" src="../../../images/icon-people.png" mode="" />
                    </view>
                    <text>{{item.conditionsMet}}人</text>
                </view>
            </view>

            <view class="prople-button">
                <view class="button" bindtap="help">助力</view>
            </view>
        </view>
    </view>


</view>