<!--pages/home/goodDetail/index.wxml-->
<view class="good-detail">
    <loading isShow="{{show?'block':'none'}}"></loading>
    <view class="good-img">
        <swiper class='swiper-box' bindchange='pagechange' current='{{currentIndex}}'>
            <swiper-item wx:for="{{prizeInfo.imageArr}}" wx:key="index" class='swiper-item_box'>
                <image src="{{item}}" mode="" />
            </swiper-item>
        </swiper>
        <view wx:if="{{prizeInfo.imageArr}}" class="page-label">
            {{currentIndex+1}}/{{prizeInfo.imageArr.length}}
        </view>
    </view>
    <view class="good-price">
        <view class="wrap">
        <view class="flex-between">
            <view class="price">
            <text class="num mr-10">{{prizeInfo.price||0}}</text>积分
            </view>
            <view class="tip align-center gap-lr-10">热卖{{prizeInfo.exchangeNum||0}}件
            <text class="">|</text>
            剩余{{prizeInfo.remainderNum||0}}件</view>
        </view>
        <view class="title mt-20">
            {{prizeInfo.prizeName||"商品名称"}}
        </view>
        </view>
    </view>
    <view class="good-desc mt-20">
        <view class="content">
            <view class="top">
                <view class="title wrap">
                    商品详情
                </view>
            </view>
            <view class="bottom">
                <view class="text">
                    {{prizeInfo.prizeDes}}
                </view>
            </view>
        </view>
    </view>
    <view class="good-desc mt-20">
        <view class="content">
            <view class="top">
                <view class="title wrap">
                    取货地址
                </view>
            </view>
            <view class="bottom">
                <view class="text">
                    {{prizeInfo.type==0?'虚拟商品兑换成功后将在10个月以内充值到您的账号':(prizeInfo.address||'商品地址')}}
                </view>
            </view>
        </view>
    </view>
    <view class="good-desc mt-20">
        <view class="content">
            <view class="top">
                <view class="title wrap">
                    联系方式
                </view>
            </view>
            <view class="bottom">
                <view class="text">
                    电话：15263524178
                </view>
                <view class="text">
                    QQ：117486921458
                </view>
            </view>
        </view>
    </view>
    <view class="h-120">

    </view>
    <view class="obtain" bindtap="exchangePrize">
        兑换奖品
    </view>
</view>