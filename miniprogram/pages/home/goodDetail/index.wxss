/* pages/home/goodDetail/index.wxss */
.good-detail{
    height: 100vh;
    background-color: #f6f6f6;
}
.swiperBox {
    /* 底部内容样式 */
    background-color: #f6f6f6;
    height: 600rpx;
}
.swiperTtemBox image {
    width: 100%;
    height: 100%;
}

.obtain {
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
    height: 120rpx;
    background-color: white;
    border-top: 2rpx solid #d9d9d9;
}

.obtain-btn {
    background-color: #ff6050;
    color: white;
    display: inline-block;
    text-align: center;
    width: 400rpx;
    padding: 18rpx 0;
    border-radius: 40rpx;
}

.good-img {
    position: relative;
}

.page-label {
    font-size: 28rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    opacity: .5;
    background-color:black;
    border-radius:500rpx;
    color: white;
    padding: 2rpx 10rpx;
}
.good-price{
    background: linear-gradient(to right, #ff595d, #fe9055);
    padding: 40rpx 0;
    color: white;
    font-size: 32rpx;
}
.good-price .num{
    font-size: 38rpx;
}
.good-desc{
    padding: 20rpx 0;
}
.content{
    background-color: white;
    padding: 20rpx 0;
    box-sizing: border-box;
    border-radius: 20rpx;
}
.name{
    padding: 20rpx 0;
    font-weight: bold;
    font-size: 36rpx;
}
.title{
    font-size: 34rpx;
    font-weight: bold;
}
.text{
    font-size: 28rpx;
    color: #6c6c6c;
    padding: 0 20rpx;
}