<!--pages/home/IntegralRecord/index.wxml-->
<!-- <wxs /> -->
<wxs module="fun" src="../../../filter/index.wxs"></wxs>
<view class="page">
    <loading isShow="{{show?'block':'none'}}"></loading>
    <view class="header">
        <view class="header-box wrap align-center flex-between">
            <view class="left">
                <view>
                    剩余积分
                </view>
                <view class="num">
                    {{integral||0}}
                </view>
            </view>
            <view class="right">
                <view class="btn">
                    去充值
                </view>
            </view>
        </view>
    </view>
    <scroll-view wx:if="{{recordList.length}}" scroll-y="{{true}}" style=" background-color: #f5f3fb;height:calc(100vh - 170rpx);">
        <view wx:for="{{recordList}}" wx:key="index" class="flex-between item wrap border-b-gray">
            <view>
                <view>
                    {{fun.getRecoedType(item.type)||item.type}}
                </view>
                <view class="tip mt-10">
                    {{fun.getDate(item.date)}}
                </view>
            </view>
            <view class="flex-right">
                <view>
                    <text class="mr-10">{{fun.getRecoedNum(item.type,item.num)||0}}</text>积分
                </view>
                <view class="tip mt-10">
                    余额：{{item.balance||0}}
                </view>
            </view>
        </view>
    </scroll-view>
    <view wx:else class="void-tip" style="height:calc(100vh - 170rpx);">
        暂无记录
    </view>
</view>