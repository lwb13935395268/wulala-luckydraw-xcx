/* pages/home/index.wxss */
.img-4{
    width: 140rpx;
    height: 140rpx;
}
.header{
    height: 220rpx;
    box-sizing: border-box;
    background-color: #ea4329;
    color: white;
    padding: 40rpx;
}
.home{
    height: 100vh;
}
.body{
    background: linear-gradient(to bottom, #ec402c, #f9ceb1);
    min-height: calc(100vh - 220rpx);
    box-sizing: border-box;
    padding: 20rpx 0;
}
.shop-title{
    background-color: #ff8013;
    border-radius: 20rpx;
    font-size: 36rpx;
    padding: 12rpx 0;
    color: white;
}
.shops{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 28rpx;
}
.shops .item{
    overflow: hidden;
    background-color: white;
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;
    padding-bottom: 10rpx;
}
.item .title{
    height: 80rpx;
    word-break:break-all;
    font-weight: bold;
    padding: 0 10rpx;  
    font-size: 30rpx;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;				
	text-overflow: ellipsis;		
	display: -webkit-box;			
	-webkit-line-clamp: 2;			
	line-clamp: 2;					
	-webkit-box-orient: vertical;	
}
.item image{
    width: 100%;
    height: 200rpx;
}
.item .content{
    box-sizing: border-box;
    padding: 0 10rpx;
    width: 100%;
    font-weight: bold;
}
.content .info{
    display: flex;
    justify-content: space-between;

}
.info .price{
    font-size: 26rpx;

}
.info .num{
    font-size: 22rpx;
    color: #b7b6b9;
}
.item .btn{
    text-align: center;
    background:linear-gradient(to right, #f69512, #f97406) ;
    font-size: 24rpx;
    border-radius: 40rpx;
    padding: 8rpx 80rpx;
    color: white;
}
.mt-5{
    margin-top: 10rpx;
}
.mt-10{
    margin-top: 20rpx;
}
.mt-20{
    margin-top: 40rpx;
}
.pt-10{
    padding-top: 20rpx;
}
.justify-between{
    display: flex;
    justify-content:space-between;
    align-items: center;
}
.flex-center{
    display: flex;
    align-items: center;
    justify-content: center;
}
.wrap{
    width: 680rpx;
    margin: 0 auto;
}

.ml-10{
    margin-left: 20rpx;
}
.fs-18{
    font-size: 36rpx;
}
.fs-14{
    font-size: 28rpx;
}
.fs-12{
    font-size: 24rpx;
}
.text-center{
    text-align: center;
}